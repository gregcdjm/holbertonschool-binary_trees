#include "binary_trees.h"

/**
 * binary_tree_delete - Binary create node
 *
 * @tree: tree to delete
 * Return: NULL or the son "fils"
 */

void binary_tree_delete(binary_tree_t *tree)
{
	binary_tree_t *fils;

	fils = malloc(sizeof(binary_tree_t));

	if (fils == NULL || tree == NULL)
		return;
	fils = tree;
	while (fils != NULL)
	{
		if (fils->left != NULL)
		{
			fils = fils->left;
			continue;
		}
		if (fils->right != NULL)
		{
			fils = fils->right;
			continue;
		}
		fils->parent = NULL;
		free(fils);
		fils = tree;
	}
}
